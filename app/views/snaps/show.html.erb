<div>
  <%= attachment_image_tag @snap, :snap_image %>
  <p>Name:<%= @snap.user.name %> <%= @snap.created_at.strftime('%Y/%m/%d') %></p>
  <p>Comment:<%= @snap.snap_comment %></p>
  
  <% if @snap.user == current_user %>
   <%= link_to "削除", snap_path(@snap), method: :delete %> <!--投稿削除-->
  <% end %>

</div>