<h1>News詳細画面</h1>
<div>
  <p>Day:<%= @news.created_at.strftime('%Y/%m/%d') %></p>
  <p>Title:<%= @news.news_title %></p>
  <p>Body: <%= @news.news_body %></p>

  <% if @news.user == current_user %>
   <%= link_to "削除", news_path(@news), method: :delete, "data-confirm" => "本当に削除しますか？" %> <!--投稿削除-->
  <% end %>
</div>